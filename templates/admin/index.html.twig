{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Admin profil ✅</h1>
    <a href="generated" ><button type="submit" class="btn btn-success">Générer des tickets</button></a>

</div>
<div class="example-wrapper">
 {% if tickets is defined %}
     <h1>Tickets générés </h1>
    <ul>
    {% for ticket in tickets %}
         {# <li>{{ loop.length }} - {{ loop.index}} - {{ ticket }}</li>  #} 
        <li>Ticket: {{ ticket.valeurs }} valeur :{{ ticket.lots }}</li> 
    
    </ul>
{% endfor %}
{{ knp_pagination_render(tickets) }}   
</div>
{% endif %}
{% endblock %}






